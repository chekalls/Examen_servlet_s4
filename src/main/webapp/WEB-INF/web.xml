<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">



    <!-- PREVISION -->
    <servlet>
        <servlet-name>insert_previsions</servlet-name>
        <servlet-class>com.itu.Projet.Servlet.PrevisionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>insert_previsions</servlet-name>
        <url-pattern>/insert_previsions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>form_prevision</servlet-name>
        <servlet-class>com.itu.Projet.Servlet.FormPrevisionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>form_prevision</servlet-name>
        <url-pattern>/form_prevision</url-pattern>
    </servlet-mapping>


        <!-- DEPENSES -->

    <servlet>
        <servlet-name>form_depense</servlet-name>
        <servlet-class>com.itu.Projet.Servlet.FormDepenseServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>form_depense</servlet-name>
        <url-pattern>/form_depense</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>inserer_depense</servlet-name>
        <servlet-class>com.itu.Projet.Servlet.DepenseServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>inserer_depense</servlet-name>
        <url-pattern>/inserer_depense</url-pattern>
    </servlet-mapping>

    <!-- LISTE -->
    <servlet>
        <servlet-name>liste_etat</servlet-name>
        <servlet-class>com.itu.Projet.Servlet.EtatServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>liste_etat</servlet-name>
        <url-pattern>/liste_etat</url-pattern>
    </servlet-mapping>

    <!-- LOGIN -->

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.itu.Projet.Servlet.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


</web-app>